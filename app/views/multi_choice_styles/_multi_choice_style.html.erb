<%= render "error_messages", target: multi_choice_style %>

<%= multi_choice_style.body %>

<%= link_to "Add new answer option",
  new_multi_choice_style_multi_choice_option_path(multi_choice_style) %>

<%= form.fields_for :multi_choice_options do |option_fields| %>
  <%= option_fields.label option_fields.object.body %>
  <%= option_fields.fields_for option_fields.object.multi_choice_answers.build do |answer_fields| %>
    <%= answer_fields.radio_button :multi_choice_option_id, option_fields.object.id, checked: false %>
  <% end %>
<% end %>
